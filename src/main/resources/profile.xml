<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <!--动态切换数据 ，stg  或者demo-->
    <context:component-scan base-package="gy.spring.learn.profile"/>
    <util:properties location="classpath:database-stg-prop" id="stg"/>
    <util:properties location="classpath:database-demo-prop" id="demo"/>
    <beans profile="stg">
        <context:property-placeholder properties-ref="stg"/>
    </beans>
    <beans profile="demo">
        <context:property-placeholder properties-ref="demo"/>
    </beans>
</beans>